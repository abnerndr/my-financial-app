generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String? // Hash da senha (null para usuários OAuth antigos)
  image         String?
  accounts      Account[]
  sessions      Session[]

  expenses Expense[]
  incomes  Income[]
  alerts   Alert[]
  settings UserSettings?

  @@index([email])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model UserSettings {
  id                           String    @id @default(cuid())
  userId                       String    @unique
  warningLimitPercent          Float     @default(0)
  emailNotificationsEnabled    Boolean   @default(true)
  phone                        String? // E.164 para WhatsApp
  phoneVerified                Boolean   @default(false)
  whatsappNotificationsEnabled Boolean   @default(false)
  verificationCode             String? // Código 6 dígitos para verificação via WhatsApp
  verificationCodeExpiresAt    DateTime?
  integrationApiKey            String?   @unique // Chave para APIs públicas (n8n)
  createdAt                    DateTime  @default(now())
  updatedAt                    DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Expense {
  id          String           @id @default(cuid())
  userId      String
  title       String
  description String?          @db.Text
  logoUrl     String?
  value       Decimal          @db.Decimal(12, 2)
  frequency   ExpenseFrequency @default(ONE_TIME)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum ExpenseFrequency {
  ONE_TIME
  MONTHLY
  ANNUAL
}

model Income {
  id        String     @id @default(cuid())
  userId    String
  type      IncomeType
  title     String
  value     Decimal    @db.Decimal(12, 2)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum IncomeType {
  SALARY
  BENEFITS
  SAVED
  OTHER
}

model Alert {
  id          String    @id @default(cuid())
  userId      String
  type        AlertType
  message     String    @db.Text
  read        Boolean   @default(false)
  triggeredAt DateTime  @default(now())
  metadata    Json?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum AlertType {
  LIMIT_WARNING
  CRITICAL
  INFO
}
